<div class="calendar-form">
  <%= form_tag searchedrooms_path, method: :get do %>
    <div class="calendar-container">
      <div class="calendar-box">
        <%= date_field :start_at, params[:start_at], required: false, id: "range_start" %>
        <div class="title">
          Check-in
        </div>
        <div class="date">
          <div id="start-day-calendar" class="day">
            <%= Date.today.to_formatted_s(:short).split(" ").first %>
          </div>
          <div id="start-month-calendar" class="month">
          <%= Date.today.to_formatted_s(:short).split(" ").last %>
          </div>
        </div>
      </div>
      <div class="calendar-box">
        <%= date_field :end_at, params[:end_at], required: false, id: "range_end", type: :text, class:"flatpickr-input" %>
        <div class="title">
          Check-out
        </div>
        <div class="date">
          <div id="end-day-calendar" class="day">
            <%= Date.today.to_formatted_s(:short).split(" ").first %>
          </div>
          <div id="end-month-calendar" class="month">
          <%= Date.today.to_formatted_s(:short).split(" ").last %>
          </div>
        </div>
      </div>
    </div>
    <%= submit_tag "Looking for rooms", class: "button-access-calendar" %>
  <% end %>
</div>
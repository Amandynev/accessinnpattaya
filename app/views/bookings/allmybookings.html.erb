<div class="container-index">

  <div class="row">

    <% @hash_bookings.each do |key, value| %>
      <div class="col-sm-12 col-xs-12 col-md-6 col-lg-4">
        <div class="card-booking">
        <%= link_to destroy_bookings_path(value[:room].category), method: :delete do %>
          <i class="far fa-times-circle"></i>
        <% end %>
          <%= image_tag "rooms/"+ value[:room].photo, class: 'card-booking-image' %>
          <div class="room-tag">
            <div class="tag-room-name">
              <%= key.upcase %>
            </div>
          </div>
          <div class="card-booking-description">
            <div class="card-booking-description-title">
              Your Reservation
            </div>
            <div class="card-booking-description-rooms">
              <div class="card-box">
                <%= value[:number] %>
                <div class="text"><%= "Room".pluralize(value[:number]) %></div>
              </div>
              <div class="card-box">
                <%= value[:nigths] %>
                <div class="text"> <%= "Night".pluralize(value[:nigths]) %></div>
              </div>
            </div>
            <div class="card-booking-description-price">
              <div class="price">
                <%= humanized_money value[:price] %>
              </div>
              <div class="detail">
                <div class="symbol">
                  <%= (humanized_money_with_symbol @amount).first %>
                </div>
                <div class="total">
                  / total
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= form_tag orders_path do %>
    <%= submit_tag 'Purchase', class: 'button-access-book' %>
</div>
<% end %>
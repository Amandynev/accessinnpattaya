<div class="container container-void-footer mt-4 ">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4">
      <div class="form-login mt-5">

        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name, label: 'First name', required: true, input_html: { maxlength: 15, size: 40, value: nil } %>
            <%= f.input :last_name, label: 'Last name', required: true, input_html: { maxlength: 15, size: 40, value: nil } %>
            <%= f.input :phone, label: 'Phone number', required: true, input_html: { maxlength: 15, size: 40, value: nil }%>
            <%= f.input :text_field, label: 'Adress', input_html: { maxlength: 15, size: 40, value: nil }%>
            <%= f.input :text_field, label: 'City code', input_html: { maxlength: 15, size: 40, value: nil }%>
            <%= f.input :text_field, label: 'Country', required: true, input_html: { maxlength: 15, size: 40, value: nil }%>
            <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "button-access-book" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

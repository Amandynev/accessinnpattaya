<div class="container">
  <div class="summary-header">
    <h1>Checkout summary</h1>
    <button id="pay" class="button-access-book">Pay <%= humanized_money_with_symbol @order.amount %></button>
  </div>
  <div class="card-payment text-header">
    <div>Room</div>
    <div>Nigths * Price</div>
    <div>Total Price</div>
  </div>
  <% @hash_bookings.each do |key, value| %>
    <div class="card-payment">
      <div><%= key %></div>
      <div><%= " #{value[:nigths]} nigths * #{humanized_money_with_symbol value[:price]}" %></div>
      <div><%= "#{humanized_money_with_symbol value[:price]*value[:nigths]}" %></div>
    </div>
  <% end %>
  <script src="https://js.stripe.com/v3/"></script>
  <script>
    const paymentButton = document.getElementById('pay');
    paymentButton.addEventListener('click', () => {
      const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
      stripe.redirectToCheckout({
        sessionId: '<%= @order.checkout_session_id %>'
      });
    });
  </script>
</div>

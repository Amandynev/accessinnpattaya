
<div class="container-index">
  <div class="row">
    <% @rooms.each do |room| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card-room">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-room-infos">
            <div>

              <div class="room-name">
                <h2><%= room.category.name %></h2>
              </div>

              <div class="services d-flex">
                <div class="bed-size">
                <span><img class="icone-css" src="data:image/svg+xml;base64," /><%= room.category.bed_size %></span>

                </div>
                <div class="balcony">
                  <% if room.category.balcony == true %>
                    <span> <img class="icone-css"src="data:image/svg+xml;base64,"/>Room with balcony</span>
                  <% elsif room.category.corner_table  == true %>
                    <span>Corner table</span>
                    <% else %>
                  <% end %>


                </div>


              </div>

              <div class="room-description">
                <p><%= room.category.description[0..107]%>...</p>
              </div>

              <div class="button-price">
                <div>
                 <%= link_to "Book now from #{room.category.price}à¸¿/night", rooms_path, class: "button-access link-without-style"%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

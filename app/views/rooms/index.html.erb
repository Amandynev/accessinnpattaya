
<div class="container-index">


    <% @categories.map { |cat| cat.rooms.first }.each do |room| %>

        <div class="card-room">
          <%= image_tag "rooms/"+ room.photo, class: 'card-room-image' %>
          <div class="card-room-infos">
            <div>
            <%= link_to room_path(room), class:"link-without-style" do %>
              <div class="room-name">
                <h2><%= room.category.name %></h2>
              </div>
            <%end%>
              <div class="services d-flex">
                <div class="bed-size">
                <span><img id="icone-css" src="data:image/svg+xml;base64," /><%= room.category.bed_size %></span>

                </div>
                <div class="balcony">
                  <% if room.category.balcony %>
                    <span> <img id="icone-css"src="data:image/svg+xml;base64,"/>Room with balcony</span>
                  <% elsif room.category.corner_table %>
                    <span> <img id="icone-css" src="data:image/svg+xml;base64," />Corner table</span>
                  <% end %>
                </div>
              </div>

              <div class="room-description">
                <p><%= room.category.description[0..107]%>...</p>
              </div>

              <div class="button-price">
                <div>

                 <%= link_to "Book now from #{humanized_money_with_symbol(room.category.price)}/night", room_path(room.category.rooms.first), class: "button-access link-without-style"%>

                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>

</div>
